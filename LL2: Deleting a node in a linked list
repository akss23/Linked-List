#include<iostream>
using namespace std;
struct Node{
    int data;
    Node* next;

    Node(int a,Node* b=NULL){
        data=a;
        next=b;
    }
};

Node* convertarr2ll(int arr[]){
    Node* head= new Node(arr[0]);
    Node* temp=head;

    for(int i=1;i<5;i++){
        Node* newnode= new Node(arr[i]);
        temp->next=newnode;//connecting the two nodes
        temp=temp->next;
    }
  return head;
}// this function code is for converting array to linked list 


void print(Node* head){
    while(head!=NULL){
        cout<<head->data<<" ";
        head = head->next;
    }
    cout<<endl;
}// this function code is for printing the linked list


Node* removeshead(Node* head){
    if(head==NULL) return head;
    Node* temp=head;
    head=head->next;
    delete temp;
    return head;
}//this fucnton code is specifically for deleting the node in linked list


int main(){
    int arr[]={10,20,30,40,50};
    Node* head=convertarr2ll(arr);
   head=removeshead(head);
   print(head);
    return 0;
}
